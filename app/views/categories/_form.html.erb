  <%= form_with model: @category, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %> <br>
    <%= form.text_field :name, autofocus: true, required: true, placeholder: 'Category name'%>
  </div>

  <div>
    <%= form.label :icon%> <br>
    <%= form.url_field :icon, autofocus: true, required: true, placeholder: 'Icon image URL'%>
  </div>

  <%= form.submit 'Save', disable_with: "Please wait..."%>
<% end %>