<section>
  <h2>Transactions</h2>
   <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
  <div>
  <h3><%= @category.name.capitalize %>'s transactions</h3>
  <h4>Total spent: $<%= @category.total_payment %></h4>
</div> 
  <% unless @payments.empty? %>
    <%= render 'list' %>
  <% else %>
    <p>No transaction available</p>
  <% end %>
  <div>
  <%= link_to "Add transaction", new_category_payment_path(@category, @payment)%>
</div>
</section>